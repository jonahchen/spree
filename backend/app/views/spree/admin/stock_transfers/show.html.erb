<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= t(:stock_transfer) %>
<% end %>

<% content_for :page_actions do %>
  <li>
  <%= button_link_to t(:back_to_stock_transfers),
                     spree.admin_stock_transfers_path, :icon => 'icon-arrow-left' %>
  </li>
<% end %>

<h3>Reference Number: <%= @stock_transfer.reference_number %></h3>
<h3>Created: <%= @stock_transfer.created_at %></h3>

<% if @stock_transfer.source_movements.present? %>
<h2>source: <%= @stock_transfer.source_location.name %></h2>
  <%= render :partial => 'stock_movements', :object => @stock_transfer.source_movements %>
<% end %>

<% if @stock_transfer.destination_movements.present? %>
  <h2>destination: <%= @stock_transfer.destination_location.name %></h2>
  <%= render :partial => 'stock_movements', :object => @stock_transfer.destination_movements %>
<% end %>

